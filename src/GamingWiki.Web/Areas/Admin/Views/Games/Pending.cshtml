@model IEnumerable<GamePendingModel>

@{
    ViewBag.Title = "Pending Games";
}

<section class="page-top-section set-bg" data-setbg="/img/page-top-bg/3.jpg">
    <div class="page-info">
        <h2>Pending Characters</h2>
        <div class="site-breadcrumb">
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>  / <a asp-area="" asp-controller="Games" asp-action="All">Games</a>
        </div>
    </div>
</section>

<section class="games-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-8 col-md-7">
                <div class="row">
                    @if (!Model.Any())
                    {
                        <h3 style="color: white">
                            No pending games!
                            <br />
                            <a asp-area="" asp-controller="Games" asp-action="All" class="btn btn-info">Back to full list</a>
                        </h3>
                    }
                    else
                    {
                        <table class="table table-hover table-dark">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Character</th>
                                    <th scope="col">Contributor</th>
                                    <th scope="col">&nbsp;&nbsp;&nbsp;Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var game in Model)
                                {
                                    <tr>
                                        <th scope="row">@game.Id</th>
                                        <td>@game.Name</td>
                                        <td>@game.ContributorName</td>
                                        <td>
                                            <a asp-area="" asp-controller="Games" asp-action="Details" asp-route-gameId="@game.Id" class="btn btn-info float-left ml-2">Details</a>
                                            <a asp-area="Admin" asp-controller="Games" asp-action="Approve" asp-route-gameId="@game.Id" class="btn btn-success float-left ml-2">Approve</a>
                                            <a asp-area="" asp-controller="Games" asp-action="Edit" asp-route-gameId="@game.Id" class="btn btn-warning float-left ml-2">Edit</a>
                                            <a asp-area="" asp-controller="Games" asp-action="Delete" asp-route-gameId="@game.Id" class="btn btn-danger float-left ml-2">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
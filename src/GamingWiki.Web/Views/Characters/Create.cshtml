@model GamingWiki.Web.Models.Characters.CharacterCollectionsModel

<section class="page-top-section set-bg" data-setbg="/img/page-top-bg/4.jpg">
    <div class="page-info">
        <h2>New character</h2>
        <div class="site-breadcrumb">
            <a href="/">Home</a>  / <a href="/Characters/All">Characters</a>
        </div>
    </div>
</section>

<section class="games-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-8 col-md-7">
                <div class="row">
                    <form action="/Characters/Create" method="post">
                        <div class="form-group"> <label>Name</label> <input type="text" name="name" class="form-control"> </div>
                        <div class="form-group"> <label>PictureUrl</label> <input type="url" name="pictureUrl" class="form-control"> </div>
                        <br />
                        <div class="form-group" style="display: inline-block;">
                            <label>Game: </label>
                            <select name="game">
                                <option style="display:none">Select a game...</option>
                                @foreach (var gameName in Model.GameNames)
                                {
                                    <option>@gameName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group" style="display: inline-block;">
                            <label>Character class: </label>
                            <select name="class">
                                <option style="display:none">Select a class...</option>
                                @foreach (var characterClass in Model.CharacterClasses)
                                {
                                    <option>@characterClass</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea name="description" msg cols="100" rows="5" class="form-control"
                                      style="background-color: black;"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Add Character
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>
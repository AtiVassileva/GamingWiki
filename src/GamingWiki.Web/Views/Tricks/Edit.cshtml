@model TrickEditModel

<section class="page-top-section set-bg" data-setbg="/img/games/big.jpg">
    <div class="page-info">
        <h2>Edit trick</h2>
        <div class="site-breadcrumb">
            <a asp-controller="Home" asp-action="Index">Home</a>  / <a asp-controller="Tricks" asp-action="All">Tips & Tricks</a>
        </div>
    </div>
</section>

<section class="games-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-8 col-md-7">
                <div class="row">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Heading"></label>
                            <input asp-for="Heading" class="form-control">
                            <span asp-validation-for="Heading" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PictureUrl"></label>
                            <input asp-for="PictureUrl" class="form-control">
                            <span asp-validation-for="PictureUrl" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Content"></label>
                            <textarea asp-for="Content" msg cols="100" rows="5" class="form-control"
                                      style="background-color: black;"></textarea>
                            <span asp-validation-for="Content" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Edit Trick
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

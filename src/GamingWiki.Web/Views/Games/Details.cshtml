@using GamingWiki.Web.Models.Games
@model GameListingModel


<div id="preloder">
    <div class="loader"></div>
</div>

<section class="page-top-section set-bg" data-setbg="/img/page-top-bg/1.jpg">
    <div class="page-info">
        <h2>@Model.Name.ToUpper()</h2>
        <div class="site-breadcrumb">
            <a href="/">Home</a>  / <a href="/Games/All">Games</a>
        </div>
    </div>
</section>

<section class="games-single-page">
    <div class="container">
        <div class="game-single-preview">
            <img src="@Model.PictureUrl" alt="">
        </div>
        <div class="row">
            <div class="col-xl-9 col-lg-8 col-md-7 game-single-content">
                <div class="gs-meta">Developed by: <a href="">@string.Join(", ", Model.Creators)</a></div>
                <h2 class="gs-title">@Model.Name.ToUpper()</h2>
                <h4>Category: @Model.Class</h4>
                <p>@Model.Description</p>
                <a href="/Games/Edit?gameId=@Model.Id" class="btn btn-outline-success">Edit</a>
                <a href="/Games/Delete?gameId=@Model.Id" class="btn btn-outline-danger">Delete</a>
                <section class="intro-video-section set-bg d-flex align-items-end " data-setbg="./img/promo-bg.jpg">
                    <a href="/img/yt1s.com - FIFA 21  Official Gameplay Trailer.mp4" class="video-play-btn video-popup"><img src="/img/icons/solid-right-arrow.png" alt="#"></a>
                    <div class="container">
                        <div class="video-text">
                            <h2>Trailer of the game. Tap to watch.</h2>
                        </div>
                    </div>
                </section>
                <div class="geme-social-share pt-5 d-flex">
                    <p>Share:</p>
                    <a href="#"><i class="fa fa-pinterest"></i></a>
                    <a href="#"><i class="fa fa-facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-dribbble"></i></a>
                    <a href="#"><i class="fa fa-behance"></i></a>
                </div>
            </div>
            <div class="col-xl-3 col-lg-4 col-md-5 sidebar game-page-sideber">
                <div id="stickySidebar">
                    <div class="widget-item">
                        <div class="rating-widget">
                            <h4 class="widget-title">Ratings</h4>
                            <ul>
                                <li>Price<span>3.5/5</span></li>
                                <li>Graphics<span>4.5/5</span></li>
                                <li>Levels<span>3.5/5</span></li>
                                <li>Difficulty<span>4.5/5</span></li>
                            </ul>
                            <div class="rating">
                                <h5><i>Rating</i><span>4.5</span> / 5</h5>
                            </div>
                        </div>
                    </div>
                    <div class="widget-item">
                        <div class="testimonials-widget">
                            <h4 class="widget-title">Testimonials</h4>
                            <div class="testim-text">
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolo re magna aliqua. Quis ipsum suspend isse ultrices.</p>
                                <h6><span>James Smith,</span>Gamer</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


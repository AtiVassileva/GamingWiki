@using GamingWiki.Web.Models.Games
@model GameListingModel

<h1>Game details for @Model.Name</h1>
<div class="row mt-2 mb-4">
    <div class="card col-6 col-lg-3 game-card">
        <img src="@Model.PictureUrl" />
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center">Place: @Model.Place</li>
                    <li class="list-group-item text-center">Class: @Model.Class</li>
                    <li class="list-group-item">
                        <span class="text-success">Creators: @string.Join(", ", @Model.Creators))</span>
                    </li>
                    <li class="list-group-item text-center">@Model.Description</li>
                </ul>
                <a href="/Games/Edit?gameId=@Model.Id" class="btn btn-block btn-primary">Edit</a>
                <a href="/Games/Delete?gameId=@Model.Id" class="btn btn-block btn-danger">Delete</a>
            </div>
        </div>
</div>
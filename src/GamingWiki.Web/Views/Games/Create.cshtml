@model GamingWiki.Web.Models.Games.GameCollectionsModel


<section class="page-top-section set-bg" data-setbg="/img/page-top-bg/1.jpg">
    <div class="page-info">
        <h2>New game</h2>
        <div class="site-breadcrumb">
            <a href="/">Home</a>  / <a href="/Games/All">Games</a>
        </div>
    </div>
</section>

<section class="games-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-8 col-md-7">
                <div class="row">
                    <form action="/Games/Create" method="post">
                        <div class="form-group"> <label>Name</label> <input type="text" name="name" class="form-control"> </div>
                        <div class="form-group"> <label>PictureUrl</label> <input type="url" name="pictureUrl" class="form-control"> </div>
                        <div class="form-group"> <label>TrailerUrl</label> <input type="url" name="trailerUrl" class="form-control"> </div>
                        <div class="form-group"> <label>Creators (separated by: ", ")</label> <input type="text" name="creatorsNames" class="form-control"> </div>
                        <div class="form-group"> <label>Gaming area</label> <input type="text" name="placeName" class="form-control"> </div>
                        <br/>
                        <div class="form-group" style="display: inline-block;">
                            <label>Gaming area type: </label>
                            <select name="placeType">
                                <option style="display:none">Select a type...</option>
                                @foreach (var @placeType in Model.PlaceTypes)
                                {
                                    <option>@placeType</option>
                                }
                            </select>
                        </div>
                        <div class="form-group" style="display: inline-block;">
                            <label>Game class: </label>
                            <select name="class">
                                <option style="display:none">Select a class...</option>
                                @foreach (var gameClass in Model.GameClasses)
                                {
                                    <option>@gameClass</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea name="description" msg cols="100" rows="5" class="form-control"
                                      style="background-color: black;"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Add Game
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
        </div>
    </div>
</section>
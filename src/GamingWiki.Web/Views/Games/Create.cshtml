@model GameFormModel

<section class="page-top-section set-bg" data-setbg="/img/page-top-bg/1.jpg">
    <div class="page-info">
        <h2>New game</h2>
        <div class="site-breadcrumb">
            <a asp-controller="Home" asp-action="Index">Home</a>  / <a asp-controller="Games" asp-action="All">Games</a>
        </div>
    </div>
</section>

<section class="games-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-8 col-md-7">
                <div class="row">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PictureUrl"></label>
                            <input asp-for="PictureUrl" class="form-control">
                            <span asp-validation-for="PictureUrl" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TrailerUrl"></label>
                            <input asp-for="TrailerUrl" class="form-control">
                            <span asp-validation-for="TrailerUrl" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatorsNames"></label>
                            <input asp-for="CreatorsNames" class="form-control">
                            <span asp-validation-for="CreatorsNames" class="small text-danger"></span>
                        </div>
                        <div class="form-group" style="display: inline-block;">
                            <label asp-for="AreaId"></label>
                            <select asp-for="AreaId">
                                <option style="display:none">Select an area...</option>
                                @foreach (var area in Model.Areas)
                                {
                                    <option value="@area.Id">@area.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group" style="display: inline-block;">
                            <label asp-for="GenreId"></label>
                            <select asp-for="GenreId">
                                <option style="display:none">Select a genre...</option>
                                @foreach (var genre in Model.Genres)
                                {
                                    <option value="@genre.Id">@genre.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="SupportedPlatforms"></label>
                            @foreach (var platform in Model.Platforms)
                            {
                                <input type="checkbox" name="supportedSupportedPlatforms" value="@platform.Id"/>
                                <label>@platform.Name&nbsp;</label>
                            }
                        </div>
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" msg cols="100" rows="5" class="form-control"
                                      style="background-color: black;"></textarea>
                            <span asp-validation-for="Description" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Add Game
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/choices.min.js"></script>
}
@model IEnumerable<ReviewListingModel>

<div id="preloder">
    <div class="loader"></div>
</div>

<section class="page-top-section set-bg" data-setbg="/img/page-top-bg/2.jpg">
    <div class="page-info">
        <h2>Reviews</h2>
        <div class="site-breadcrumb">
            <a href="/">Home</a>  / <a href="/Games/All">Games</a>
        </div>
    </div>
</section>

<section class="blog-page">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 col-lg-8 col-md-7">

                @foreach (var review in Model)
                {
    <div class="big-blog-item">
        <img src="@review.Game.PictureUrl" alt="#" class="blog-thumbnail" style="width: 700px; height: 350px; object-fit: cover">
        <div class="blog-content text-box text-white">
            <h3><a href="/Games/Details?gameId=@review.Game.Id">@review.Game.Name</a></h3>
            <div class="top-meta">
                <i class="fa fa-user-o"></i> @review.Author
            </div>
            <p>@review.Description</p>
            <a href="/Games/Details?gameId=@review.Game.Id" class="read-more">Learn More about @review.Game.Name <img src="/img/icons/double-arrow.png" alt="#"/></a>
            <br/>
            <br/>
            <a href="/Reviews/Edit?reviewId=@review.Id" class="btn btn-outline-success">Edit</a>
            <a href="/Reviews/Delete?reviewId=@review.Id" class="btn btn-outline-danger">Delete</a>
        </div>
    </div>
                    
                }
                <div class="site-pagination">
                    <a href="#" class="active">01.</a>
                    <a href="#">02.</a>
                    <a href="#">03.</a>
                </div>
            </div>
            <div class="col-xl-3 col-lg-4 col-md-5 sidebar">
                <div id="stickySidebar">
                    <div class="widget-item">
                        <form class="search-widget" action="/Reviews/Search" method="post">
                            <input type="text" name="searchCriteria">
                            <button>Search</button>
                        </form>
                    </div>
                    <div class="widget-item">
                        <div class="categories-widget">
                            <h4 class="widget-title">categories</h4>
                            <ul>
                                <li><a href="">Games</a></li>
                                <li><a href="">Gaming Tips & Tricks</a></li>
                                <li><a href="">Online Games</a></li>
                                <li><a href="">Team Games</a></li>
                                <li><a href="">Community</a></li>
                                <li><a href="">Uncategorized</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="widget-item">
                        <a href="#" class="add">
                            <img src="./img/add.jpg" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="newsletter-section">
    <div class="container">
        <h2>Subscribe to our newsletter</h2>
        <form class="newsletter-form">
            <input type="text" placeholder="ENTER YOUR E-MAIL">
            <button class="site-btn">subscribe <img src="/img/icons/double-arrow.png" alt="#" /></button>
        </form>
    </div>
</section>
@using GamingWiki.Models.Common
@model DiscussionServiceEditModel

@{
    ViewBag.Title = "Edit Discussion";
}

<section class="page-top-section set-bg" data-setbg="/img/promo-bg.jpg">
    <div class="page-info">
        <h2>Edit discussion</h2>
        <div class="site-breadcrumb">
            <a asp-controller="Home" asp-action="Index">Home</a>  / <a asp-controller="Discussions" asp-action="All">Discussions</a>
        </div>
    </div>
</section>

<section class="games-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-8 col-md-7">
                <div class="row">
                    <form method="post">
                        <div class="form-group">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control">
                                <span asp-validation-for="Name" class="small text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="PictureUrl"></label>
                            <input asp-for="PictureUrl" class="form-control">
                            <span asp-validation-for="PictureUrl" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MembersLimit"></label>
                            <input asp-for="MembersLimit" class="form-control" min="@DataConstants.MinDiscussionMembers" max="@DataConstants.MaxDiscussionMembers" value="@Model.MembersLimit">
                            =                            <span asp-validation-for="MembersLimit" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" msg cols="100" rows="5" class="form-control"
                                      style="background-color: black;">@Model.Description</textarea>
                            <span asp-validation-for="Description" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Edit Discussion
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
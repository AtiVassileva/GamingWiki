@model HomeViewModel

<div id="preloder">
    <div class="loader"></div>
</div>

<section class="blog-section spad">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 col-lg-8 col-md-7">
                <div class="section-title text-white">
                    <h2>Latest News</h2>
                </div>
                @foreach (var article in Model.LatestArticles)
                {
                    <div class="blog-item">
                        <div class="blog-thumb">
                            <img src="@article.PictureUrl" alt="">
                        </div>
                        <div class="blog-text text-box text-white">
                            <div class="top-meta">Latest news  /  in <a asp-controller="Articles" asp-action="All">Articles</a></div>
                            <h3>@article.Heading</h3>
                            <p>@article.ShortContent</p>
                            <a asp-controller="Articles" asp-action="Details" asp-route-articleId="@article.Id" class="read-more">Read More  <img src="/img/icons/double-arrow.png" alt="#" /></a>
                        </div>
                    </div>
                }
            </div>
            <div class="col-xl-3 col-lg-4 col-md-5 sidebar">
                <div id="stickySidebar">
                    <div class="widget-item">
                        <h4 class="widget-title">Trending</h4>
                        <div class="trending-widget">
                            @foreach (var game in Model.BestGames)
                            {
                                <div class="tw-item">
                                    <div class="tw-thumb">
                                        <img src="@game.PictureUrl" alt="#">
                                    </div>
                                    <div class="tw-text">
                                        <div class="tw-meta">Trending / in <a asp-controller="Games" asp-action="All">Games</a></div>
                                        <a asp-controller="Games" asp-action="Details" asp-route-gameId="@game.Id"><h5>@game.Name</h5></a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@{
    ViewBag.Title = "Guest";
}

<section class="hero-section overflow-hidden">
    <div class="hero-slider owl-carousel">
        <div class="hero-item set-bg d-flex align-items-center justify-content-center text-center" data-setbg="img/slider-bg-1.jpg">
            <div class="container">
                <h2>Game on!</h2>
                <p>Gaming is not only hobby, it's a passion. <br />Join our community right now and dive into the world of gaming. </p>
                <a asp-area="Identity" asp-page="/Account/Register" class="site-btn">Join us now  <img src="/img/icons/double-arrow.png" alt="#" /></a>
                <a asp-area="Identity" asp-page="/Account/Login" class="site-btn">Sign In<img src="/img/icons/double-arrow.png" alt="#" /></a>
            </div>
        </div>
    </div>
</section>
